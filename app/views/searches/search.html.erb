<h2>検索結果</h2>

<table class="table table-hover table-inverse">
  <% if @range == "User" %>
    <tbody>
      <% @users.each do |user| %>
        <%= link_to user_path(user) do %>
          <tr>
            <td><%= image_tag user.get_profile_image, size:"10×10" %></td>
            <td><%= user.name %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  <% else %>
    <tbody>
      <% @books.each do |book| %>
        <%= link_to book_path(book) do %>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
          </tr>
       <% end %>
      <% end %>
    </tbody>
  <% end %>
</table>